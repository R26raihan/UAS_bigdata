# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_password
DATABASE_NAME=ai_writer

# Application Configuration
APP_NAME="AI Writer API"
APP_VERSION="1.0.0"
DEBUG=True

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI Models (Fallback Priority Order)
# Model 1: Fast and cheap (primary)
AI_MODEL_1=meta-llama/llama-3.2-3b-instruct:free
# Model 2: Balanced (fallback 1)
AI_MODEL_2=google/gemini-2.0-flash-exp:free
# Model 3: Quality (fallback 2)  
AI_MODEL_3=mistralai/mistral-7b-instruct:free
# Model 4: Alternative (fallback 3)
AI_MODEL_4=qwen/qwen-2-7b-instruct:free
# Model 5: Last resort (fallback 4)
AI_MODEL_5=microsoft/phi-3-mini-128k-instruct:free

# AI Generation Settings
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.3
AI_TIMEOUT=30
AI_MAX_RETRIES=3

# Caching Configuration
ENABLE_AI_CACHE=True
CACHE_TTL_HOURS=24
